<div class="px-12 py-6 bg-slate-400 flex flex-col md:flex-row gap-6 mb-12">
    <div class="font-semibold text-3xl">
        <a href="/">
            Song Splitter Magic Thing
        </a>
    </div>

    <div rel="controls" class="grow text-right flex flex-col md:flex-row md:justify-end">
        {% if current_user.is_authenticated %}
            <div class="md:mx-12">
                <span class="md:visible invisible">Logged in as</span> <strong>{{ current_user.username }}</strong>
            </div>
            <div>
                <a href="{{ url_for('logout') }}">Log out</a>
            </div>
        {% endif %}
    </div>
</div>
